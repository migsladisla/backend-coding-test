        "parameters": [
          {
            "name": "pageNum",
            "in": "query",
            "description": "Desired page to fetch",
            "type": "integer"
          },
          {
            "name": "recordsPerPage",
            "in": "query",
            "description": "Number of records per page",
            "type": "integer"
          }
