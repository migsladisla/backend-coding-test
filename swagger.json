        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the ride",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Ride"
            }
